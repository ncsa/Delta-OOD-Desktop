echo start before
if [ -z ${HOME+x} ];
then
    export HOME=$(echo ~)
	source /etc/profile
	source /etc/bashrc
	source $HOME/.bashrc
fi

# Export the module function if it exists
[[ $(type -t module) == "function" ]] && export -f module
hostname -f
pwd

# Apptainer is in path by default
#module load containers/apptainer

# Get OOD hostname
export ondemand_host=$(cut -d, -f1 <<< $OOD_ALLOWED_HOSTS)

## some apptainer cleanup
#unset APPTAINER_TMPDIR
export APPTAINERENV_LD_LIBRARY_PATH=$LD_LIBRARY_PATH

# Check if we have a GPU
if [ -n "$CUDA_VISIBLE_DEVICES" ]; then
	APPTAINER_GPU_ENABLE="--nv"
else
	APPTAINER_GPU_ENABLE=""
fi

export TMPDIR=$HOME/.ood_desktop_tmp
rm -rf $TMPDIR
mkdir -p $TMPDIR/varlibxkb
export OOD_CWD=`pwd`
( cd && apptainer run --cleanenv $APPTAINER_GPU_ENABLE \
  --bind $OOD_CWD:/cwd,$TMPDIR:/TMPDIR,$TMPDIR/varlibxkb:/var/lib/xkb,/scratch,/ui,/taiga,/projects,/usr/apps,/usr/local/modules,/usr/local/private,/usr/local/quarto,/usr/share/modulefiles,/etc/profile.d,/var/spool/slurmd/conf-cache:/etc/slurm,/etc/slurm/lua.d,/etc/slurm/plugstack.conf.d,/var/run/munge --env PS1='[\u@\h \W]$ ' \
    <%= context.bc_image %> -d "Desktop-$(hostname -f)" & )
